<Window x:Class="A3Ronish.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3Ronish"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1009">
    <Canvas>


        <DataGrid x:Name="grdDisplay" Height="380" Width="624" Canvas.Left="350" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>


        <Label Content="Search Title" Canvas.Left="30" Canvas.Top="50" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtSearchTitle" Canvas.Left="140" Canvas.Top="50" Width="180" FontSize="16"/>


        <Button x:Name="btnGetAllEmployees" Content="Get All Employees" Canvas.Left="30" Canvas.Top="100" Width="290" Height="40" FontSize="16" Click="btnGetAllEmployees_Click"/>
        <Button x:Name="btnSearchByTitle" Content="Search by Title" Canvas.Left="30" Canvas.Top="150" Width="290" Height="40" FontSize="16" Click="btnSearchByTitle_Click"/>
        <Button x:Name="btnSortByAge" Content="Sort Employees by Age" Canvas.Left="30" Canvas.Top="200" Width="290" Height="40" FontSize="16" Click="btnSortByAge_Click"/>
        <Button x:Name="btnGetAllOrders" Content="Get All Orders" Canvas.Left="30" Canvas.Top="250" Width="290" Height="40" FontSize="16" Click="btnGetAllOrders_Click"/>
        <Button x:Name="btnExit" Content="Exit" Canvas.Left="30" Canvas.Top="300" Width="290" Height="40" FontSize="16" Click="btnExit_Click"/>

    </Canvas>
</Window>
