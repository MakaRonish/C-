<Window x:Class="DisconnectedModelExample.DataSetWithMultipleTables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisconnectedModelExample"
        mc:Ignorable="d"
        Title="DataSetWithMultipleTables" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnLoad" Content="Load Data" HorizontalAlignment="Left" Margin="330,35,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="35" Width="145" Click="btnLoad_Click"/>
        <DataGrid x:Name="grdProducts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="25,114,405,40"/>
        <DataGrid x:Name="grdCateories" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="410,119,50,40"/>

    </Grid>

</Window>
