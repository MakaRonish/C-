<Window x:Class="W5_1_WPF_basic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W5_1_WPF_basic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF20A599">
    <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="lb1_Name" Content="Hello" Height="46" Width="498" Foreground="#FFFF9E9E" Background="#FFBF3636" FontWeight="Bold" FontSize="20" FontFamily="Arial Black" Cursor="Pen" HorizontalAlignment="Center"/>
        <Button x:Name="btn_1" Content="Click Me" Height="70" Width="171" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF1DFFCB" Margin="0,20,0,0" Click="btn_1_Click"/>
        <Button x:Name="btn_reset" Content="Reset" Height="81" Width="172" Click="Button_Click" Background="#FF8CDB2A"/>
    </StackPanel>
</Window>
